@model GGZBTQPT_PRO.Models.T_XM_Transaction
　
@{
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="pageContent">
@using (Html.BeginForm("Create", "XM_JY", FormMethod.Post, new { onsubmit = "return validateCallback(this,dialogAjaxDone)", @class = "pageForm" }))
{
    @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ItemID)
        <table style="border-spacing:15px">
        <tr>
            <td width="80px">交易名称</td>
            <td>@Html.TextBoxFor(model => model.TranTitle, new { style = "width:400px" })</td>
        </tr>
        <tr>
            <td>受资方</td>
            <td>@Html.TextBoxFor(model => model.AcceptMember, new { style = "width:200px" })
            @Html.ValidationMessageFor(model => model.AcceptMember)</td>
        </tr>
        <tr>
            <td>投资方</td>
            <td>@Html.TextBoxFor(model => model.GiveMember, new { style = "width:200px" })
            @Html.ValidationMessageFor(model => model.GiveMember)</td>
        </tr>
        <tr>
            <td>交易金额</td>
            <td>@Html.TextBoxFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)（万元）</td>
        </tr>
        <tr>
            <td>交易时间</td>
            <td>
            <input type="text" name="trantime" class="date" [pattern="yyyy-MM-dd"] [yearstart="-80"] [yearend="5"]/>
            @Html.ValidationMessageFor(model => model.TranTime)</td>
        </tr>
        <tr>
            <td>交易详情</td>
            <td></td>
        </tr>
        <tr>
            <td colspan="2"><textarea class="editor" name="trancontent" rows="15" cols="30"></textarea>
            @Html.ValidationMessageFor(model => model.TranContent)</td>
        </tr>
        </table>
    
        <p>
            <input type="submit" value="保 存" />
        </p>
}
</div>
