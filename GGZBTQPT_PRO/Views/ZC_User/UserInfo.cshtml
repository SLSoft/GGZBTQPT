@model IEnumerable<GGZBTQPT_PRO.Models.T_ZC_User>

<div class="pageContent j-resizeGrid" style="border-left: 1px #B8D0D6 solid; border-right: 1px #B8D0D6 solid">
  <div class="panelBar">
    <ul class="toolBar">
      <li><a class="add" href="/ZC_User/create" rel="create" target="dialog" title="添加新的用户" mask="true"><span>添加</span></a></li>
      <li><a class="edit" href="/ZC_User/edit/{mid}" rel="edit" target="dialog" title="编辑用户信息" mask="true" warn="请选择一条用户信息"><span>修改</span></a></li>
      <li><a class="delete" href="/ZC_User/delete/{mid}" rel="delete" target="ajaxTodo" title="确定要删除吗？"  warn="请选择一条用户信息"><span>删除</span></a></li>
      <li class="line">line</li>
      <li><a class="icon" href="#"><span>导入EXCEL</span></a></li>
    </ul>
  </div>
  <div layouth="116">
    <table class="list" width="98%" asc="asc" desc="desc">
      <thead>
        <tr>
          <th>
           @Resources.T_ZC_User.Name
          </th>
          <th>
           @Resources.T_ZC_User.LoginName
          </th>
          <th>
           @Resources.T_ZC_User.Password
          </th>
          <th>
           @Resources.T_ZC_User.IdCard
          </th>
          <th>
           @Resources.T_ZC_User.Order
          </th>
          <th>
           @Resources.T_ZC_User.CellPhone
          </th>
          <th>
           @Resources.T_ZC_User.IsValid
          </th>
          <th>
           @Resources.Common.Operate
          </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr target="mid" rel=@item.ID>
            <td>
              @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.LoginName)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.IdCard)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.CellPhone)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.IsValid)
            </td>
            <td>
              @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
              @Html.ActionLink("详细", "Details", new { id = item.ID }) |
              @Html.ActionLink("删除", "Delete", new { id = item.ID })
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
  <div class="panelBar">
    <div class="pages">
      <span>显示</span>
      <select name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value})">
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
        <option value="200">200</option>
      </select>
      <span>条，共23条</span>
    </div>
    <div class="pagination" targettype="navTab" totalcount="200" numperpage="20" pagenumshown="10" currentpage="2">
    </div>
  </div>
</div>
