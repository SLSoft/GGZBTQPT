@model GGZBTQPT_PRO.Models.T_XM_Investment
@{
    Layout = null;
}

<div id="FormContainer" class="pageContent">
    @using (Html.BeginForm("HotInvestmentEdit", "HY_Member", FormMethod.Post, new { onsubmit = "return validateCallback(this,dialogAjaxDone)", @class = "pageForm" }))
    {
        @Html.ValidationSummary(true)
        <div class="pageFormContent" layouth="56">

            @Html.HiddenFor(model => model.ID)
            <p>
                @Html.LabelFor(model => model.ItemName,"意向名称")
                @Html.EditorFor(model => model.ItemName)
                @Html.ValidationMessageFor(model => model.ItemName)
            </p>
            <p style="height:auto">
                @Html.LabelFor(model => model.Description, "意向描述")
                @Html.TextAreaFor(model => model.Description, new { rows = "8", style = "width:200px" })
                @Html.ValidationMessageFor(model => model.Description)
            </p>
            <p>
                @Html.LabelFor(model => model.Linkman, "意向链接")
                @Html.EditorFor(model => model.Linkman)
                @Html.ValidationMessageFor(model => model.Linkman)
            </p>
        </div>
        
        <div class="formBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                保存</button></div>
                    </div>
                </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消</button></div>
                    </div>
                </li>
            </ul>
        </div>
    }
</div>

