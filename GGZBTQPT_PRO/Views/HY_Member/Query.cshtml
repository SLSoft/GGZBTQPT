@model IEnumerable<GGZBTQPT_PRO.ViewModels.VM_MemberStat>

@{
    Layout = null;
}

<div class="pageHeader">
    <form id="pagerForm" method="post" action="@Url.Action("Query")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    <input type="hidden" name="keywords" value="@ViewData["keywords"]"  />
    <input type="hidden" name="type" value="@ViewData["Types"]"  />
    </form>
    <form onsubmit="return navTabSearch(this);" action="@Url.Action("Query")"
    method="post">
    <div class="searchBar">
        <ul class="searchContent">
            <li>
                <label>
                    会员用户名：</label>
                <input type="text" name="keywords" value="@ViewData["keywords"]" />
            </li>
            <li>
                <label>
                    会员类型：</label>
                    @Html.DropDownList("Type",(SelectList)ViewData["Types"])
            </li>
        </ul>
        <div class="subBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                检索</button></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            @*<li><a class="add" href="@Url.Action("create","HY_Member")" rel="create" target="dialog" width="400"
                height="250" title="添加新的会员" mask="true"><span>添加</span></a></li>
            <li><a class="edit" href="@Url.Action("edit", "HY_Member", new { id = "{mid}" })" rel="edit" target="dialog" width="400"
                height="250" title="编辑会员信息" mask="true" warn="请选择一条会员数据"><span>编辑</span></a></li>*@
            <li><a class="delete" href="@Url.Action("delete", "HY_Member", new { id = "{mid}" })" rel="delete" target="ajaxTodo"
                title="确定要删除吗？" warn="请选择一条会员数据"><span>删除</span></a></li>
            <li class="line">line</li>

        </ul>
    </div>
    <div layouth="116" id="divList">
        <table  class="list" width="100%" asc="asc" desc="desc">
        <thead>
        <tr>
            <th width="40">
                <input type="checkbox" group="ids" class="checkboxCtrl" />
            </th>
            <th>
                登录名
            </th>
            <th>
                用户名
            </th>
            <th>
                手机
            </th>
            <th>
                用户类型
            </th>
            <th>
                创建时间
            </th>
            <th>
                项目数
            </th>
            <th>
                意向数
            </th>
            <th>
                产品数
            </th>
            <th>
                操作
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
        <tr>
            <td  target="mid" rel=@item.Member.ID>
                 <input name="ids" type="checkbox" value="@item.Member.ID" />      
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.LoginName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.CellPhone)
            </td>
            <td>
                @item.Member.TypeName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.CreatedAt)
            </td>
            <td>
                @item.FinancingCount
            </td>
            <td>
                @item.InvestmentCount
            </td>
            <td>
                @item.ProductCount
            </td>
            <td>
                <a class="add" href="@Url.Action("QueryDetails", "HY_Member", new { member_id = @item.Member.ID })" rel="QueryDetails" target="dialog" width="650"
                height="550" title="详情" mask="true"><span>详情</span></a>
            </td>
        </tr>
        }
        </tbody>
        </table>
    </div>
    <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 15, 25, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  
               currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>
