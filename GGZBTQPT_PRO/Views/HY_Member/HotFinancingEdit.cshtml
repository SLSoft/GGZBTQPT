@model GGZBTQPT_PRO.Models.T_XM_Financing
@{
    Layout = null;
}
<script type="text/javascript">
    $.validator.unobtrusive.parse(document);
</script>

<div id="FormContainer" class="pageContent">
    @using (Html.BeginForm("HotFinancingEdit", "HY_Member", FormMethod.Post, new { onsubmit = "return validateCallback(this,dialogAjaxDone)", @class = "pageForm" }))
    {
        @Html.ValidationSummary(true)
        <div class="pageFormContent" layouth="56">

            @Html.HiddenFor(model => model.ID)
            <p>
                @Html.LabelFor(model => model.ItemName,"项目名称")
                @Html.EditorFor(model => model.ItemName)
                @Html.ValidationMessageFor(model => model.ItemName)
            </p>
            <p style="height:auto">
                @Html.LabelFor(model => model.ItemContent, "项目描述")
                @Html.TextAreaFor(model => model.ItemContent, new { @class = "editor", rows="15", style = "width:75%" })
                @Html.ValidationMessageFor(model => model.ItemContent)
            </p>
            <p>
                @Html.LabelFor(model => model.Linkman, "项目链接")
                @Html.EditorFor(model => model.Linkman)
            </p>
        </div>
        
        <div class="formBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                保存</button></div>
                    </div>
                </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消</button></div>
                    </div>
                </li>
            </ul>
        </div>
    }
</div>

