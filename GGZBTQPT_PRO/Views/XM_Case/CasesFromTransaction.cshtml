@model IEnumerable<GGZBTQPT_PRO.Models.T_XM_Case>
@using GGZBTQPT_PRO.Enums
@{
    Layout = null;
}

@helper GenerateLinkForXM(GGZBTQPT_PRO.Models.T_XM_Case xm_case)
{
    if(xm_case.Type == (int)CaseTypes.Financing)
    {
        @Html.ActionLink(xm_case.Name,"Details","XM_TZ", new { id = xm_case.GenerateFromID, xm_type = xm_case.Type }, new { target = "dialog", max="true", width = "400", height = "250", title = "投资项目详情", mask = "true" })
    }
    else
    {
        @Html.ActionLink(xm_case.Name,"Details","XM_RZ", new { id = xm_case.GenerateFromID, xm_type = xm_case.Type }, new { target = "dialog", max="true", width = "400", height = "250", title = "融资项目详情", mask = "true" })
    } 
}
<div class="pageHeader">
    <form id="pagerForm" method="post" action="@Url.Action("CasesFromTransaction")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    <input type="hidden" name="keywords" value="@ViewData["keywords"]"  />
    </form>
    <form onsubmit="return navTabSearch(this);" action="@Url.Action("Index")"
    method="post">
    <div class="searchBar">
        <ul class="searchContent">
            <li>
                <label>
                    案例名称：</label>
                <input type="text" name="keywords" value="@ViewData["keywords"]" />
            </li>
        </ul>
        <div class="subBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                检索</button></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li><a class="edit" href="@Url.Action("edit", "XM_Case", new { id = "{mid}", generate_type = (int)GenerateTypes.FromSystem })" rel="edit" target="dialog" max="true" title="编辑案例信息" mask="true" warn="请选择一条案例数据"><span>编辑</span></a></li>
            <li><a class="delete" href="@Url.Action("delete", "XM_Case", new { id = "{mid}" })" rel="delete" target="ajaxTodo"
                title="确定要删除吗？" warn="请选择一条案例数据"><span>删除</span></a></li>
            <li class="line">line</li>
        </ul>
    </div>
    <div layouth="116" id="divList">
        <table class="list" width="100%" asc="asc" desc="desc">
            <thead>
                <tr>
                    <th width="40">
                        <input type="checkbox" group="ids" class="checkboxCtrl">
                    </th>
                    <th orderfield="name" class="asc">
                        案例名称
                    </th>
                    <th>
                        案例类型
                    </th>
                    <th>
                        案例摘要
                    </th>
                    <th>文件下载</th>
                    <th>
                        创建时间
                    </th>
                    <th>
                        更新时间
                    </th> 
                    <th>
                        发布到门户
                    </th>
                    <th>
                        案例分析
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr target="mid" rel=@item.ID>
                        <td>
                            <input name="ids" type="checkbox" value="@item.ID" />
                        </td>
                        <td>
                            @GenerateLinkForXM(item)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Summary)
                        </td>
                        <td>
                            @Html.ActionLink("文件下载", "DownLoadFile", new { id = item.ID })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedAt)
                        </td>
                        <td>
                            @Ajax.ActionLink("发布到门户", "PublishCaseToCMS", new { id = item.ID }, new AjaxOptions{ HttpMethod = "POST", OnSuccess = "DWZ.ajaxDone(data)" })
                        </td>
                        <td>
                            @Html.ActionLink("案例分析", "Analysis", new { xm_id = item.GenerateFromID, xm_type = item.Type }, new { target = "dialog", width="400", height="250", title="类似项目成交统计", mask="true" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 15, 20, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  
               currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>
