@model GGZBTQPT_PRO.Models.T_ZC_Department
@{
    Layout = null;
}
<script type="text/javascript">
    $.validator.unobtrusive.parse(document);
</script>
<div class="pageContent">
    @using (Html.BeginForm("Create", "ZC_Department", FormMethod.Post, new { onsubmit = "return validateCallback(this,dialogAjaxDone)", @class = "pageForm" }))
    {
        @Html.ValidationSummary(true)
        <div class="pageFormContent" layouth="56">
            <p>
                @Html.LabelFor(model => model.ParentID, "上级部门")
                @Html.DropDownList("ParentID", "请选择上级部门")
                @Html.ValidationMessageFor(model => model.ParentID)
            </p>
            <p>
                @Html.LabelFor(model => model.Name, "部门名称")
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </p>
            <p>
                @Html.LabelFor(model => model.FullName, "部门全称")
                @Html.EditorFor(model => model.FullName)
                @Html.ValidationMessageFor(model => model.FullName)
            </p>
            <p>
                @Html.LabelFor(model => model.Order, "部门排序")
                @Html.EditorFor(model => model.Order)
                @Html.ValidationMessageFor(model => model.Order)
            </p>
        </div>

        <div class="formBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                保存</button></div>
                    </div>
                </li>
                <li>
                    <div class="button">
                        <div class="buttonContent">
                            <button type="button" class="close">
                                取消</button></div>
                    </div>
                </li>
            </ul>
        </div>
  
    }
</div>
