@model IEnumerable<GGZBTQPT_PRO.Models.T_NB_File>

@{
    Layout = null;
}

<div class="pageHeader">
    <form id="pagerForm" method="post" action="@Url.Action("FileList")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    <input type="hidden" name="keywords" value="@ViewData["keywords"]"  />
    @*<input type="hidden" name="orderField" value="${param.orderField}" />
        <input type="hidden" name="orderDirection" value="${param.orderDirection}" />*@
    </form>
    <form onsubmit="return navTabSearch(this);" rel="pagerForm"  action="@Url.Action("FileList")"
    method="post">
    <div class="searchBar">
        <ul class="searchContent">
            <li>
                <label>
                    标题：</label>
                <input type="text" name="keywords" value="@ViewData["keywords"]" />
            </li>
        </ul>
        <div class="subBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                检索</button></div>
                    </div>
                </li>
                @*<li><a class="button" href="demo_page6.html" target="dialog" mask="true" title="查询框">
                    <span>高级检索</span></a></li>*@
            </ul>
        </div>
    </div>
    </form>
</div>

<div class="pageContent" style="padding-top:1px; border-top:1px #B8D0D6 solid;">

    <div layouth="91" id="divList">
        <table  class="list" width="100%" asc="asc" desc="desc">
            <thead>
            <tr>
                <th width="40">
                    <input type="checkbox" group="ids" class="checkboxCtrl">
                </th>
                <th>
                    发送用户
                </th>
                <th>
                    标题
                </th>
                <th>
                    文件下载
                </th>
                <th>
                    接收用户
                </th>
                <th>
                    创建时间
                </th>
                <th>
                    更新时间
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
            <tr target="mid" rel=@item.ID>
                <td>
                    <input name="ids" type="checkbox" value="@item.ID" />
                </td>
                <td>
                    @item.SendUser.UserName
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @Html.ActionLink(item.FileName == null ? "文件下载" : item.FileName, "DownLoadFile", new { id = item.ID })
                </td>
                <td>
                   @foreach (var user in item.ReceiveUsers)
                   {
                       <span style="margin-right:10px;">@user.UserName</span>
                   }
                </td>
                <td>
                    @item.CreatedTime
                </td>
                <td>
                    @item.UpdateTime
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 15, 25, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div rel="FileInfoBox" class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  
               currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>
