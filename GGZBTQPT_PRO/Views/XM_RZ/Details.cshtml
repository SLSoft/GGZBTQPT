@model GGZBTQPT_PRO.Models.T_XM_Financing

@{
    ViewBag.Title = "Details";
    Layout = null;
}
<link href="@Url.Content("~/Content/css/Style.css")" rel="stylesheet" type="text/css" />
<div class="pageFormContent" layouth="30">

<div class="title_detail">融资信息</div>
        <table class="tb-detail" cellpadding="0" cellspacing="0">
            <tr>
                <td width="100px">项目名称</td>
                <td>@Html.DisplayFor(model => model.ItemName)</td>
            </tr>
            <tr>
                <td width="100px">所属单位</td>
                <td>@Html.DisplayFor(model => model.Owner)</td>
            </tr>
            <tr>
                <td width="100px">项目类别</td>
                <td>@Html.DisplayFor(model => model.ItemText)</td>
            </tr>
            <tr>
                <td>发布会员</td>
                <td>@Html.DisplayFor(model => model.MemberName)</td>
            </tr>
            <tr>
                <td>发布时间</td>
                <td>@Html.DisplayFor(model => model.PublicTime)</td>
            </tr>
            <tr>
                <td>所属区域</td>
                <td>@Html.DisplayFor(model => model.AreaName)</td>
            </tr>
            <tr>
                <td>所属行业</td>
                <td>@Html.DisplayFor(model => model.IndustryName)</td>
            </tr>
            <tr>
                <td>有效日期</td>
                <td>@Html.DisplayFor(model => model.ValidDate)</td>
            </tr>
            <tr>
                <td>项目介绍</td>
                <td>@Html.Raw(Model.ItemContent)</td>
            </tr>
        @if (Model.ItemType == 1)
        {
            <tr>
                <td>融资金额</td>
                <td>@Html.DisplayFor(model => model.FinancSum) （万元）</td>
            </tr>
            <tr>
                <td>融资方式</td>
                <td>@Html.DisplayFor(model => model.FinancTypeText)</td>
            </tr>
            <tr>
                <td>融资期限</td>
                <td>@Html.DisplayFor(model => model.FinancCycle)（月）</td>
            </tr>
            <tr>
                <td>项目总投资</td>
                <td>@Html.DisplayFor(model => model.TotalInvestment) （万元）</td>
            </tr>
            <tr>
                <td>预计回报率</td>
                <td>@Html.DisplayFor(model => model.ReturnRatio) （%/年）</td>
            </tr>
            <tr>
                <td>项目阶段</td>
                <td>@Html.DisplayFor(model => model.ItemStageText)</td>
            </tr>
            <tr>
                <td>项目评估价值</td>
                <td>@Html.DisplayFor(model => model.ItemValue)（万元）</td>
            </tr>
            <tr>
                <td>担保说明</td>
                <td>@Html.DisplayFor(model => model.Assure)</td>
            </tr>
            <tr>
                <td>抵质押物</td>
                <td>@Html.DisplayFor(model => model.Collateral)</td>
            </tr>
            <tr>
                <td>合作方要求</td>
                <td>@Html.DisplayFor(model => model.PartnerRequirements)</td>
            </tr>
        }
        @if (Model.ItemType == 2)
        {
            <tr>
                <td>资产类别</td>
                <td>@Html.DisplayFor(model => model.AssetsTypeText)</td>
            </tr>
            <tr>
                <td>资产估价</td>
                <td>@Html.DisplayFor(model => model.AssetsCost) （万元）</td>
            </tr>
            <tr>
                <td>转让价格</td>
                <td>@Html.DisplayFor(model => model.TransferPrice) （万元）</td>
            </tr>
            <tr>
                <td>是否抵质押</td>
                <td>@Html.DisplayFor(model => model.IsMortgage)</td>
            </tr>
            <tr>
                <td>转让形式</td>
                <td>@Html.DisplayFor(model => model.TransferType)</td>
            </tr>
            <tr>
                <td>交易方式</td>
                <td>@Html.DisplayFor(model => model.TransactionModeText)</td>
            </tr>
        }
        @if (Model.ItemType == 3)
        {
            <tr>
                <td>招商投资总额</td>
                <td>@Html.EditorFor(model => model.Investment) （万元）</td>
            </tr>
            <tr>
                <td>合作方式</td>
                <td>@Html.EditorFor(model => model.CooperationMode)</td>
            </tr>
            <tr>
                <td>预计项目所用时间</td>
                <td>@Html.EditorFor(model => model.BuildCycle) （月）</td>
            </tr>
            <tr>
                <td>投资回收期</td>
                <td>@Html.EditorFor(model => model.ReturnCycle) （月）</td>
            </tr>
        }
        @if (Model.ItemType == 9)
        {
            <tr>
                <td>融资金额</td>
                <td>@Html.EditorFor(model => model.OtherItemFinancSum) （万元）
                </td>
            </tr>
            <tr>
                <td>融资期限</td>
                <td>@Html.EditorFor(model => model.OtherItemFinancSum) （月）</td>
            </tr>
        }
        </table>

<div class="title_detail">联系方式</div>
        <table class="tb-detail">
            <tr>
                <td width="100px;">联系人</td>
                <td>@Html.DisplayFor(model => model.Linkman)</td>
            </tr>
            <tr>
                <td>部门/职务</td>
                <td>@Html.DisplayFor(model => model.Position)</td>
            </tr>
            <tr>
                <td>联系电话</td>
                <td>@Html.DisplayFor(model => model.Phone)  @Html.DisplayFor(model => model.Mobile)</td>
            </tr>
            <tr>
                <td>传真</td>
                <td>@Html.DisplayFor(model => model.Fax)</td>
            </tr>
            <tr>
                <td>邮箱</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>QQ</td>
                <td>@Html.DisplayFor(model => model.QQ)</td>
            </tr>
            <tr>
                <td>通讯地址</td>
                <td>@Html.DisplayFor(model => model.Address)</td>
            </tr>
        </table>
</div>