@model IEnumerable<GGZBTQPT_PRO.Models.T_XM_Financing>
@{
    Layout = null;
}

<div class="pageHeader">
<form id="pagerForm" method="post" action="@Url.Action("RZMatch")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    <input type="hidden" name="keywords" value="@ViewData["keywords"]"  />
    </form>
    <form onsubmit="return navTabSearch(this);" action="@Url.Action("RZMatch")" method="post">
    <div class="searchBar">
        <ul class="searchContent">
            <li>
                <label>
                    项目名称：</label>
                <input type="text" name="keywords" value="@ViewData["keywords"]" />
            </li>
        </ul>
        <div class="subBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                检索</button></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</div>
<div class="pageContent">
  <div class="panelBar">
    <ul class="toolBar">
      <li><a class="add" href="@Url.Action("create", "XM_RZ")" rel="create" target="dialog" title="添加新项目" mask="true" width="650" height="620"><span>添加</span></a></li>
      <li><a class="edit" href="@Url.Action("edit", "XM_RZ", new { id = "{mid}" })" rel="edit" target="dialog" title="编辑项目信息" mask="true" warn="请选择一个项目" width="800" height="620"><span>修改</span></a></li>
      <li><a class="delete" href="@Url.Action("delete", "XM_RZ", new { id = "{mid}" })" rel="delete" target="ajaxTodo" title="确定要删除吗？"  warn="请选择一个项目"><span>删除</span></a></li>
    </ul>
  </div>
  <div layouth="115">
    <table class="list" width="100%" asc="asc" desc="desc">
      <thead>
        <tr>
            <th>
                项目名称
            </th>
            <th>
                项目类别
            </th>
            <th>
                所属行业
            </th>
            <th>
                有效日期
            </th>
            <th>
                操作
            </th>          
    </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
            <tr target="mid" rel=@item.ID>
                <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndustryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidDate)
            </td>
            <td>
                <a href="@Url.Action("RZMatchResult", "XM_RZ", new { id = item.ID})" target="navtab" title="匹配意向" mask="true" width="690" height="800"><span>交易分析</span></a>|
                <a class="add" href="@Url.Action("create", "XM_JY", new { id = item.ID})" rel="create" target="dialog" title="添加新交易" mask="true" width="850" height="580">交易管理</a>
            </td>
            </tr>
        }
      </tbody>
    </table>
  </div>
   <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 5, 10, 20, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  
               currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>