@model GGZBTQPT_PRO.Models.T_XM_Investment

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<link href="@Url.Content("~/Content/css/Style.css")" rel="stylesheet" type="text/css" />
<div class="pageFormContent" layouth="30">
<p class="title_detail">@Html.DisplayFor(model => model.ItemName)</p>

<fieldset style="width:90%; margin-left:20px; margin-top:20px;">
    <legend>基本情况</legend>  
        <table class="tb-detail">
            <tr>
                <td width="100px">投资意向标题：</td>
                <td>@Html.DisplayFor(model => model.ItemName)</td>
            </tr>
            <tr>
                <td>发布会员：</td>
                <td>@Html.DisplayFor(model => model.MemberName)</td>
            </tr>
            <tr>
                <td>意向行业：</td>
                <td>@Html.DisplayFor(model => model.AimIndustryName)</td>
            </tr>
            <tr>
                <td>投资地区：</td>
                <td>@Html.DisplayFor(model => model.AjmAreaName)</td>
            </tr>
            <tr>
                <td>可投资金额：</td>
                <td>@Html.DisplayFor(model => model.Investment) （万元）</td>
            </tr>
            <tr>
                <td>投资期限：</td>
                <td>@Html.DisplayFor(model => model.InvestmentPeriod) （月）</td>
            </tr>
            <tr>
                <td>合作方式：</td>
                <td>@Html.DisplayFor(model => model.TeamworkTypeText)</td>
            </tr>
            <tr>
                <td>合作方要求：</td>
                <td>@Html.DisplayFor(model => model.PartnerRequirements)</td>
            </tr>
            <tr>
                <td>投资意向描述：</td>
                <td>@Html.Raw(Model.Description)</td>
            </tr>
        </table>

</fieldset>
<fieldset style="width:90%; margin-left:20px; margin-top:20px;">
    <legend>联系方式</legend>  
    <table class="tb-detail">
            <tr>
                <td width="100px;">联系人</td>
                <td>@Html.DisplayFor(model => model.Linkman)</td>
            </tr>
            <tr>
                <td>部门/职务</td>
                <td>@Html.DisplayFor(model => model.Position)</td>
            </tr>
            <tr>
                <td>联系电话</td>
                <td>@Html.DisplayFor(model => model.Phone)  @Html.DisplayFor(model => model.Mobile)</td>
            </tr>
            <tr>
                <td>传真</td>
                <td>@Html.DisplayFor(model => model.Fax)</td>
            </tr>
            <tr>
                <td>邮箱</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>QQ</td>
                <td>@Html.DisplayFor(model => model.QQ)</td>
            </tr>
        </table>
</fieldset>
</div>