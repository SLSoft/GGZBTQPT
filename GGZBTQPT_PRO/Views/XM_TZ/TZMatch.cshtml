@model IEnumerable<GGZBTQPT_PRO.Models.T_XM_Investment>
@{
    Layout = null;
}

<div class="pageContent j-resizeGrid" style="border-left: 1px #B8D0D6 solid; border-right: 1px #B8D0D6 solid">
<form id="pagerForm" method="post" action="@Url.Action("TZMatch")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    </form>
  <div class="panelBar">
    <ul class="toolBar">
      <li><a class="add" href="@Url.Action("create", "XM_TZ")" rel="create" target="dialog" title="添加新项目" mask="true" width="650" height="620"><span>添加</span></a></li>
      <li><a class="edit" href="@Url.Action("edit", "XM_TZ", new { id = "{mid}" })" rel="edit" target="dialog" title="编辑项目信息" mask="true" warn="请选择一个项目" width="800" height="620"><span>修改</span></a></li>
      <li><a class="delete" href="@Url.Action("delete", "XM_TZ", new { id = "{mid}" })" rel="delete" target="ajaxTodo" title="确定要删除吗？"  warn="请选择一个项目"><span>删除</span></a></li>
      <li class="line">line</li>
      <li><a class="icon" href="@Url.Action("TZMatchResult", "XM_TZ", new { id = "{mid}" })" rel="create" target="navtab" title="匹配项目" mask="true" width="690" height="800"><span>资金对接</span></a></li>
    </ul>
  </div>
  <div layouth="116">
    <table class="list" width="100%" asc="asc" desc="desc">
      <thead>
        <tr>
            <th>
            意向名称
        </th>
        <th>
            所属单位
        </th>
        <th>
            最高投资额度(万元)
        </th>
        <th>
            提交时间
        </th>
    </tr>
      </thead>
      <tbody>
        @foreach (var item in Model) {
            <tr target="mid" rel=@item.ID>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Investment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmitTime)
                </td>
            </tr>
            <tr>
                <td colspan="5"><div id=@item.ID  align="center"></div></td>
            </tr>
        }
      </tbody>
    </table>
  </div>
   <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 5, 10, 20, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  
               currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>
