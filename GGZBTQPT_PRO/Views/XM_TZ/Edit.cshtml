@model GGZBTQPT_PRO.Models.T_XM_Investment

@{
    ViewBag.Title = "Edit";
}
@helper GenerateIndustry(string selected_Industry)
    {
        var i = 0;
        foreach (var item in ViewData["Industry"] as SelectList)
        {
            if (i % 6 == 0)
            {
            <br />
            }
            if (selected_Industry != null && selected_Industry.IndexOf(@item.Value) >= 0)
            {
            <input type="checkbox" name="cbIndustry" value="@item.Value" checked="checked" /><span>@item.Text</span>
            }
            else
            {
            <input type="checkbox" name="cbIndustry" value="@item.Value" /><span>@item.Text</span>
            }
            i++;
        }
}
@helper GenerateProvince(string selected_Province)
    {
        var i = 0;
        foreach (var item in ViewData["Province"] as SelectList)
        {
            if (i % 8 == 0)
            {
            <br />
            }
            if (selected_Province != null && selected_Province.IndexOf(@item.Value) >= 0)
            {
                <input type="checkbox" name="cbProvince" value="@item.Value" checked="checked" /><span>@item.Text</span>
            }
            else
            {
                 <input type="checkbox" name="cbProvince" value="@item.Value" /><span>@item.Text</span>
            }
            i++;
        }
}
<script type="text/javascript">
    $(function () {
        GetPlant();
        $("#Province").change(function () { GetPlant() });
    });

    function GetPlant() {
        $("#ddlCity").empty();
        var url = "/XM_RZ/GetCity/?ParentCode=" + $("#Province").val();
        $.ajaxSettings.async = false;
        $.getJSON(url, function (data) {
            $.each(data, function (i, item) {
                $("<option></option>")
                    .val(item["Code"])
                    .text(item["Name"])
                    .appendTo($("#ddlCity"));

            });
        });
        var ct = $("#City").val();
        $("#ddlCity").find("option[value='" + ct + "']").attr("selected", true);
    }
</script>
