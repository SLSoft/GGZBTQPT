@model IEnumerable<GGZBTQPT_PRO.Models.T_ZC_CommonLog>
@{
    Layout = null;
}
<div class="pageHeader">
    <form id="pagerForm" method="post" action="@Url.Action("ErrorLog")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    <input type="hidden" name="keywords" value="@ViewData["keywords"]"  />
    </form>
    <form onsubmit="return navTabSearch(this);" action="@Url.Action("ErrorLog")"
    method="post">
    <div class="searchBar">
        <ul class="searchContent">
            <li>
                <label>
                    错误日志关键字：</label>
                <input type="text" name="keywords" value="@ViewData["keywords"]" />
            </li>
        </ul>
        <div class="subBar">
            <ul>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                            <button type="submit">
                                检索</button>
                            
                        </div>
                    </div>
                </li>
                <li>
                    <div class="buttonActive">
                        <div class="buttonContent">
                        <a href="@Url.Action("ExportErrorLogWithExcel")" target="dwzExport" targetType="navTab" title="实要导出这些记录吗?">导出EXCEL</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar"> 
            <li><a class="edit" href="@Url.Action("ErrorDetails","ZC_CommonLog", new { id = "{mid}"})" rel="ErrorDetails" target="dialog" width="400"
                height="250"  max="true" title="查看详细错误日志" mask="true" warn="请选择一条日志数据"><span>详细信息</span></a></li> 
        </ul>
    </div>
    <div layouth="116" id="divList">
        <table class="list" width="100%" asc="asc" desc="desc">
            <thead>
                <tr>
                    <th orderfield="name" class="asc">
                        错误日志记录
                    </th>
                    <th>
                        创建时间
                    </th>
                    <th>
                        来源
                    </th>

                    <th>
                        操作人
                    </th>
                    <th>
                        详细堆栈信息
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr target="mid" rel=@item.ID>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message).ToString().Substring(0,30)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Logger)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.User)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Exception).ToString().Substring(0, 50)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 15, 20, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>
