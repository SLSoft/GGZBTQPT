@model IEnumerable<GGZBTQPT_PRO.Models.T_JG_Agency>
@{
    Layout = null;
}
<div class="pageContent j-resizeGrid" style="border-left: 1px #B8D0D6 solid; border-right: 1px #B8D0D6 solid">
    <form id="pagerForm" method="post" action="@Url.Action("Index")">
    <input type="hidden" name="pageNum" value="@ViewData["pageNum"]" />
    <input type="hidden" name="numPerPage" value="@ViewData["numPerPage"]"  />
    </form>
  <div class="panelBar">
    <ul class="toolBar">
      <li><a class="add" href="@Url.Action("create", "JG_Agency")" rel="create" target="dialog" title="添加新机构" mask="true" width="500" height="400"><span>添加</span></a></li>
      <li><a class="edit" href="@Url.Action("edit", "JG_Agency", new { id = "{mid}" })" rel="edit" target="dialog" title="编辑机构信息" mask="true" warn="请选择一个机构" width="500" height="400"><span>修改</span></a></li>
      <li><a class="delete" href="@Url.Action("delete", "JG_Agency", new { id = "{mid}" })" rel="delete" target="ajaxTodo" title="确定要删除吗？"  warn="请选择一个机构"><span>删除</span></a></li>
      <li class="line">line</li>
      <li><a class="icon" href="#"><span>导入EXCEL</span></a></li>
    </ul>
  </div>
  <div layouth="116">
    <table class="list" width="100%" asc="asc" desc="desc">
      <thead>
        <tr>
            <th>
            机构名称
        </th>
        <th>
            机构类别
        </th>
        <th>
            联系电话
        </th>
    </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
            <tr target="mid" rel=@item.ID>
                 <td>
                    @Html.DisplayFor(modelItem => item.AgencyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgencyTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone,"联系电话")
                </td>
            </tr>
        }
      </tbody>
    </table>
  </div>
  <div class="panelBar">
        <div class="pages">
            <span>每页显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value,pageNum:1})">
                @{  
                    int[] nums = new int[] { 5, 10, 20, 50, 100, 200 };
                    foreach (var num in nums)
                    {
                        if (Int32.Parse(ViewData["numPerPage"].ToString()) == num)
                        {  
                    <option value="@num" selected="selected">@num</option>       
                        }
                        else
                        {<option value="@num">@num</option>    }

                    }  
                }
            </select>
            <span>条，共 @ViewData["recordCount"] 条</span>
        </div>
        <div class="pagination" targettype="navTab" totalcount="@ViewData["recordCount"]" numperpage="@ViewData["numPerPage"]" pagenumshown="10"  
               currentpage="@ViewData["pageNum"]">
        </div>
    </div>
</div>