@{
    ViewBag.Title = "我的消息";
    string UnRead = "未读消息(" + ViewBag.UnRead + "条)";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#message li a").click(function (e) {
            e.preventDefault();
            $("#message li").removeClass("active");
            $(this).parent("li").addClass("active");
        });
        $("#message li.active a").click();
    });
</script>
<h3 class="content-title">
    我的消息</h3>

<ul id="message" class="nav nav-tabs">
    <li class="active">
        @Ajax.ActionLink(UnRead, "UnRead", "Message", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "details", LoadingElementId = "Loading" })
    </li>
    <li>
        @Ajax.ActionLink("发件箱", "Sended", "Message", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "details", LoadingElementId = "Loading" })
    </li>
    <li>
        @Ajax.ActionLink("收件箱", "Received", "Message", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "details", LoadingElementId = "Loading" })
    </li>
</ul>

<div id="details">

</div>