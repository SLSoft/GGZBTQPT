@helper GenerateCustomerType()
{
    foreach (var item in ViewData["CustomerType"] as SelectList)
    {
       <li><input type="checkbox" id="checkboxType" name="cbCustomerType" value="@item.Value" /><span>@item.Text</span></li>
    }
}

@helper GenerateAgency()
{
    foreach (var item in ViewData["AgencyList"] as SelectList)
    {
       <li><input type="checkbox" id="checkboxType" name="cbAgency" value="@item.Value" /><span>@item.Text</span></li>
    }
}
