@model IEnumerable<GGZBTQPT_PRO.Models.T_XM_Investment>

@{
    ViewBag.Title = "InquiredInvestments";
    Layout = null;
}

<div class="row-fluid">
        @*项目信息*@
        @foreach (var _model in Model)
        {
            <div class="recommend-content ">
                <h4>
                    <a href="#">@_model.ItemName</a></h4>
                @*摘要*@
                <p class="summary">
                    @_model.Description
                </p>
                @*附属信息*@
                <div class="recommend-info">
                    <span class="pub-time">@_model.CreateTime</span> <span class="pro-type">总投资：@_model.Investment</span> 
                    <span class="favorite"><a href="#">【@_model.Favoites.Count() 人收藏】</a></span> 
                    <span><i class="icon-heart"></i> @Ajax.ActionLink("取消收藏", "UnFavored", "Favorite", new { id = _model.ID }, new AjaxOptions { HttpMethod = "post", OnSuccess = "updateMsg" }) </span>
                </div>
            </div>
        }
    </div>
    <div class="pagination pagination-left clear">
        <ul>
            <li class="disabled"><a href="#">Prev</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">6</a></li>
            <li><a href="#">7</a></li>
            <li class="disabled"><a href="#">Next</a></li>
        </ul>
    </div>
