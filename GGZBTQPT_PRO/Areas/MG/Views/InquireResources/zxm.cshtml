</div>
<script type="text/javascript">
    $(".favoritem").click(function () {
        $.post(
            $(this).attr("href"), { url: window.parent.location.href },
            function (data) { 
                if (data.login) { 
                    window.parent.location = "@Url.Action("Login", "Member")";
                }
                if(data.type == "success")
                {
                    alert("操作成功");
                    window.parent.location.reload();
                } 
            }
        );
        return false;
    });
</script>
