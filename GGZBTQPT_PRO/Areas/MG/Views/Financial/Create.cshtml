@model GGZBTQPT_PRO.Models.T_XM_Financing 
@section custom_css{
    <link href="@Url.Content("~/Areas/MG/Content/css/member.css")" rel="stylesheet" type="text/css" />
}
@helper GenerateTransactionMode()
    {
    var i = 0;
    foreach (var item in ViewData["TransactionMode"] as SelectList)
    {
        if (i % 6 == 0)
        {
            <br />
        }
        <input type="checkbox" name="TransactionMode" value="@item.Value" /><span>@item.Text</span>
        i++;
    }
}
<script type="text/javascript">
    $(function () {
        $("#item2").hide();
        $("#item3").hide();
        $("#item4").hide();
        $("#Province").change(function () { GetPlant() });
        $("input:radio").change(function () {
            var checked = $("input[name='itemtype']:checked").val();
            if (checked == "1") {
                $("#item1").show();
                $("#item2").hide();
                $("#item3").hide();
                $("#item4").hide();
            }
            if (checked == "2") {
                $("#item1").hide();
                $("#item2").show();
                $("#item3").hide();
                $("#item4").hide();
            }
            if (checked == "3") {
                $("#item1").hide();
                $("#item2").hide();
                $("#item3").show();
                $("#item4").hide();
            }
            if (checked == "9") {
                $("#item1").hide();
                $("#item2").hide();
                $("#item3").hide();
                $("#item4").show();
            }
        });
    });

    function GetPlant() {
        $("#ddlCity").empty();
        var url = "/XM_RZ/GetCity/?ParentCode=" + $("#Province").val();
        $.getJSON(url, function (data) {
            $.each(data, function (i, item) {
                $("<option></option>")
                    .val(item["Code"])
                    .text(item["Name"])
                    .appendTo($("#ddlCity"));

            });
        });
    }
</script>
