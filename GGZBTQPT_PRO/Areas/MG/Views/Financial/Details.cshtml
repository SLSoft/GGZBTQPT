@model GGZBTQPT_PRO.Models.T_XM_Financing

<h3>@Model.ItemName</h3>
<p>项目类别【@Html.DisplayFor(model => model.ItemText)】</p>
        <table width="100%">
            <tr>
                <td width="90px">发布会员</td>
                <td>@Html.DisplayFor(model => model.MemberName)</td>
            </tr>
            <tr>
                <td>发布时间</td>
                <td>@Html.DisplayFor(model => model.CreateTime)</td>
            </tr>
            <tr>
                <td>所属区域</td>
                <td>@ViewBag.AreaText</td>
            </tr>
            <tr>
                <td>所属行业</td>
                <td>@Html.DisplayFor(model => model.IndustryName)</td>
            </tr>
            <tr>
                <td>有效日期</td>
                <td>@Html.DisplayFor(model => model.ValidDate)</td>
            </tr>
            <tr>
                <td>项目介绍</td>
                <td>@Html.Raw(Model.ItemContent)</td>
            </tr>
        </table>
        @if (Model.ItemType == 1)
        {
        <table width="100%" border="1">
            <tr>
                <td colspan="6" style="background-color:Gray; color:#fff">融资信息</td>
            </tr>
            <tr>
                <td>融资金额</td>
                <td>@if(Model.FinancSum > 0)
                    {
                        @Html.DisplayFor(model => model.FinancSum) @:万元
                                                                   }</td>
                <td>融资方式</td>
                <td colspan="3">@Html.DisplayFor(model => model.FinancTypeText)</td>
            </tr>
            <tr>
                <td width="90px">融资期限</td>
                <td width="120px">
                @if(Model.FinancCycle > 0)
                {
                    @Html.DisplayFor(model => model.FinancCycle) @:月 
                }</td>
                <td width="90px">项目总投资</td>
                <td width="120px">@if (Model.TotalInvestment > 0)
                                  {
                                      @Html.DisplayFor(model => model.TotalInvestment) @:万元 
                                      }</td>
                <td width="90px">预计回报率</td>
                <td>@if (Model.ReturnRatio > 0)
                    {
                        @Html.DisplayFor(model => model.ReturnRatio) @:%/年
                        }</td>
            </tr>
            <tr>
                <td>项目阶段</td>
                <td>@Html.DisplayFor(model => model.ItemStageText)</td>
                <td>项目评估价值</td>
                <td>@if (Model.ItemValue > 0)
                    {
                        @Html.DisplayFor(model => model.ItemValue) @:万元
                     }</td>
                <td>担保说明</td>
                <td>@Html.DisplayFor(model => model.Assure)</td>
            </tr>
            <tr>
                <td width="90px">合作方要求</td>
                <td colspan="5">@Html.DisplayFor(model => model.PartnerRequirements)</td>          
            </tr>
        </table>
        }
        @if (Model.ItemType == 2)
        {
        <table width="100%" border="1">
            <tr>
                <td colspan="6" style="background-color:Gray; color:#fff">资产交易</td>
            </tr>
            <tr>
                <td width="90px">资产类别</td>
                <td width="120px">@Html.DisplayFor(model => model.AssetsTypeText)</td>
                <td width="90px">资产估价</td>
                <td width="120px">@Html.DisplayFor(model => model.AssetsCost)</td>
                <td width="90px">转让价格</td>
                <td>@Html.DisplayFor(model => model.TransferPrice)</td>
            </tr>
            <tr>
                <td>是否抵质押</td>
                <td>@Html.DisplayFor(model => model.IsMortgage)</td>
                <td>转让形式</td>
                <td>@Html.DisplayFor(model => model.TransferTypeText)</td>
                <td>交易方式</td>
                <td>@Html.DisplayFor(model => model.TransactionModeText)</td>
            </tr>
            <tr>
                <td>资产介绍</td>
                <td colspan="5">@Html.DisplayFor(model => model.ItemContent)</td>
            </tr>
        </table>
        }
        @if (Model.ItemType == 3)
        {
        <table width="100%" border="1">
            <tr>
                <td colspan="4" style="background-color:Gray; color:#fff">政府招商</td>
            </tr>
            <tr>
                <td style="width:120px">@Html.LabelFor(model => model.Investment, "招商投资总额")</td>
                <td>@Html.DisplayFor(model => model.Investment)万元</td>
                <td style="width:120px">@Html.LabelFor(model => model.CooperationMode, "合作方式")</td>
                <td>@Html.DisplayFor(model => model.CooperationModeText)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.BuildCycle, "预计项目所用时间")</td>
                <td>@Html.DisplayFor(model => model.BuildCycle)月</td>
                <td>@Html.LabelFor(model => model.ReturnCycle, "投资回收期")</td>
                <td>@Html.DisplayFor(model => model.ReturnCycle)月</td>
            </tr>
        </table>
        }
        @if (Model.ItemType == 9)
        {
        <table width="100%" border="1">
            <tr>
                <td colspan="4" style="background-color:Gray; color:#fff">其他项目</td>
            </tr>
            <tr>
                <td style="width:120px">@Html.LabelFor(model => model.OtherItemFinancSum, "融资金额")</td>
                <td style="width:120px">@Html.DisplayFor(model => model.OtherItemFinancSum)万元</td>
                <td style="width:120px">@Html.LabelFor(model => model.OtherItemFinancSum, "融资期限")</td>
                <td>@Html.DisplayFor(model => model.OtherItemFinancSum)月</td>
            </tr>
        </table>
        }
        <p style="background-color:Gray; color:#fff"></p>
        <table width="100%" border="1px">
            <tr>
                <td colspan="2" style="background-color:Gray; color:#fff">联系方式</td>
            </tr>
            <tr>
                <td width="120px">联系人</td>
                <td>@Html.DisplayFor(model => model.Linkman)</td>
            </tr>
            <tr>
                <td>联系人部门/职务</td>
                <td>@Html.DisplayFor(model => model.Position)</td>
            </tr>
            <tr>
                <td>联系电话</td>
                <td>@Html.DisplayFor(model => model.Phone)  @Html.DisplayFor(model => model.Mobile)</td>
            </tr>
            <tr>
                <td>传真</td>
                <td>@Html.DisplayFor(model => model.Fax)</td>
            </tr>
            <tr>
                <td>邮箱</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>QQ</td>
                <td>@Html.DisplayFor(model => model.QQ)</td>
            </tr>
        </table>