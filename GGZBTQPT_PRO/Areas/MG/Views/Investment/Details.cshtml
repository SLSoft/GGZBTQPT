@model GGZBTQPT_PRO.Models.T_XM_Investment

<h3>@Model.ItemName</h3>
        <table width="100%">
            <tr>
                <td width="90px">发布会员</td>
                <td>@Html.DisplayFor(model => model.MemberName)</td>
            </tr>
            <tr>
                <td>发布时间</td>
                <td>@Html.DisplayFor(model => model.CreateTime)</td>
            </tr>
            <tr>
                <td>所属区域</td>
                <td>@ViewBag.AreaText</td>
            </tr>
            <tr>
                <td>所属行业</td>
                <td>@Html.DisplayFor(model => model.IndustryName)</td>
            </tr>
            <tr>
                <td>有效日期</td>
                <td>@Html.DisplayFor(model => model.ValidDate)</td>
            </tr>
            <tr>
                <td>意向介绍</td>
                <td>@Html.Raw(Model.Description)</td>
            </tr>
        </table>
        <table width="100%" border="1">
            <tr>
                <td colspan="4" style="background-color:Gray; color:#fff">意向信息</td>
            </tr>
            <tr>
                <td width="120px">可投资金额</td>
                <td width="180px">@Html.DisplayFor(model => model.Investment)万元</td>
                <td width="90px">投资期限</td>
                <td>@Html.DisplayFor(model => model.InvestmentPeriod)月</td>
            </tr>
            <tr>
                <td>意向行业</td>
                <td>@Html.DisplayFor(model => model.AimIndustryName)</td>
                <td>意向地区</td>
                <td>@Html.DisplayFor(model => model.AjmAreaName)</td>
            </tr>
            <tr>
                <td>投资性质</td>
                <td>@Html.DisplayFor(model => model.InvestmentNatureText)</td>
                <td>投资阶段</td>
                <td>@Html.DisplayFor(model => model.InvestmentStageText)</td>
            </tr>
            <tr>
                <td>合作方式</td>
                <td>@Html.DisplayFor(model => model.TeamworkTypeText)</td>
                <td>合作方要求</td>
                <td>@Html.DisplayFor(model => model.PartnerRequirements)</td>
            </tr>
        </table>
        <table width="100%" border="1px">
            <tr>
                <td colspan="2" style="background-color:Gray; color:#fff">联系方式</td>
            </tr>
            <tr>
                <td width="120px">联系人</td>
                <td>@Html.DisplayFor(model => model.Linkman)</td>
            </tr>
            <tr>
                <td>联系人部门/职务</td>
                <td>@Html.DisplayFor(model => model.Position)</td>
            </tr>
            <tr>
                <td>联系电话</td>
                <td>@Html.DisplayFor(model => model.Phone)  @Html.DisplayFor(model => model.Mobile)</td>
            </tr>
            <tr>
                <td>传真</td>
                <td>@Html.DisplayFor(model => model.Fax)</td>
            </tr>
            <tr>
                <td>邮箱</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>QQ</td>
                <td>@Html.DisplayFor(model => model.QQ)</td>
            </tr>
        </table>