@model GGZBTQPT_PRO.Models.T_QY_RZXQ

@{
    Layout = null;
}
<script src="@Url.Content("~/Public/bootstrap/js/jquery.1.7.2.js")")" type="text/javascript"></script>
<style>
<!--
body{ background:#fff;}
.applyfrom{ line-height:18px; margin-top:20px}
.applyfrom caption{ line-height:30px;}
.applyfrom td{ padding:4px 0;}
.applyfrom h5{ margin:0; padding:0; font-size:14px; background:#efefef; line-height:25px; padding-left:5px;}
.applyfrom em{ color:#ff0000; font-style:normal; padding-right:5px; font-size:12px;}
.applyinfo{ margin-bottom:15px;}
