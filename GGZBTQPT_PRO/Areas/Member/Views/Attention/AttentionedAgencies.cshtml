@model IEnumerable<GGZBTQPT_PRO.Models.T_JG_Agency>
<script type="text/javascript">
    function notice(data) {
        $("#attentioned li.active a").click();
        $.Member.notice(data);
    }
</script>
<div id="attentioned">
    @foreach (var _model in Model)
    {
        <div class="attentioned-content row-fluid">
            @*关注的创业者的头像和基本信息*@
            <div class="member-link span2">
                <img alt="友邻头像" class="img-circle" src="../../../../Content/images/member/user.jpg" />
                <div class="contact">
                    <ul> 
                        <li>@Ajax.ActionLink("取消关注", "UnAttentioned", "Attention", new { id = _model.MemberID }, new AjaxOptions { HttpMethod = "post", OnSuccess = "notice" }) </li>
                    </ul>
                </div>
            </div>
            @*完整信息*@
            <div class="person-detail span10">
                @*可见信息*@
                <h4>
                    @_model.AgencyName</h4>
                <div class="base-detail">
                <div>
                    <label>机构类型：<span>@_model.AgencyTypeName</span></label>
                    <label>所在城市：<span>@_model.City</span></label>
                    <label>注册资金：<span>@_model.RegCapital</span></label>
                    <label>机构介绍:</label>
                    <p>@_model.Remark</p>
                    <label>服务介绍:</label>
                    <p>@_model.Services</p>
                </div> 
                </div>
                @*隐私信息*@
                <div class="privacy-detail">
                <p><span class="label label-important">****以下信息互相关注后可见****</span></p>
                    <span class="phone">固定电话：@_model.Phone</span><span class="mobile">地址：@_model.Address</span>
                </div>
            </div>
        </div>
    }
    <div class="pagination pagination-left clear">
        <ul>
            <li class="disabled"><a href="#">Prev</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">6</a></li>
            <li><a href="#">7</a></li>
            <li class="disabled"><a href="#">Next</a></li>
        </ul>
    </div>
</div>

