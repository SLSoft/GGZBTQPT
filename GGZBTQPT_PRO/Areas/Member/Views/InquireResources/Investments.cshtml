@model IEnumerable<GGZBTQPT_PRO.Models.T_XM_Investment>
@{
    ViewBag.Title = "找资金";
}
<style type="text/css">
input,span {font:12px/24px verdana;vertical-align:middle;} 
</style>
@helper GenerateIndustry()
{
    var i = 0;
    foreach (var item in ViewData["Industry"] as SelectList)
    {
        if (i % 6 == 0 && i != 0)
        {
            @:</tr><tr>
        }
            @:<td><input type="checkbox" name="cbIndustry" value="@item.Value"/><span>@item.Text</span></td>
        i++;
    }
}
@helper GenerateTeamworkType()
{
    var i = 0;
    foreach (var item in ViewData["TeamworkType"] as SelectList)
    {
        if (i % 6 == 0 && i != 0)
        {
            @:</tr><tr>
        }
            @:<td><input type="checkbox" name="cbTeamworkType" value="@item.Value" /><span>@item.Text</span></td>
        i++;
    }
}
<h3 class="content-title">
    找资金</h3>
<div class="inquire-conditions">
</div>
<div id="inquire-options" class="inquire-options well well-small">
    <form action="Investments" method="post">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                <label>
                    合作方式：</label>
            </div>
            <div class="span10">
                <table width="600px">
                    <tr>
                    @GenerateTeamworkType()
                    </tr>
                </table>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <label>
                    意向行业：</label>
            </div>
            <div class="span10">
                <table width="600px">
                    <tr>
                    @GenerateIndustry()
                    </tr>
                </table>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <label>
                    资金范围：</label>
            </div>
            <div class="span10">
                <input type="checkbox" name="cbFinancial" value="-1" title="不限" /><span>不限</span>
                <input type="checkbox" name="cbFinancial" value="<10" title="1-10万" /><span>1-10万</span>
                <input type="checkbox" name="cbFinancial" value="between 10 and 50" title="10-50万" /><span>10-50万</span>
                <input type="checkbox" name="cbFinancial" value="between 50 and 100" title="50-100万" /><span>50-100万</span>
                <input type="checkbox" name="cbFinancial" value="between 1 and 1000" title="500-1000万" /><span>500-1000万</span>
                <input type="checkbox" name="cbFinancial" value="between 1000 and 5000" title="1000-5000万" /><span>1000-5000万</span>
                <input type="checkbox" name="cbFinancial" value="between 5000 and 10000" title="5000万-1亿" /><span>5000万-1亿</span>
                <input type="checkbox" name="cbFinancial" value=">10000" title="大于1亿" /><span>大于1亿</span>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <label>
                项目名称:</label><input type="text" name="keys" />
            <input type="submit" value="查询" />
            <input type="reset" value="重置" />
        </div>
        <div class="row-fluid">
            <a href="#">发布时间</a> <a href="#">投资金额</a> <a href="#">收藏数</a>
        </div>
    </div>
    </form>
</div>
<div id="inquire-content" class="inquire-content">
 <div class="row-fluid">
        @*项目信息*@
        @foreach (var _model in Model)
        {
            <div class="recommend-content ">
                <h4>
                    <a href="#">@_model.ItemName</a></h4>
                @*摘要*@
                <p class="summary">
                    @_model.Description
                </p>
                @*附属信息*@
                <div class="recommend-info">
                    <span class="pub-time">@_model.CreateTime</span> <span class="pro-type">总投资：@_model.Investment</span> 
                    <span class="favorite"><a href="#">【@_model.Favoites.Count() 人收藏】</a></span> 
                    <span><i class="icon-heart"></i> @Ajax.ActionLink("取消收藏", "UnFavored", "Favorite", new { id = _model.ID }, new AjaxOptions { HttpMethod = "post", OnSuccess = "updateMsg" }) </span>
                </div>
            </div>
        }
    </div>
    <div class="pagination pagination-left clear">
        <ul>
            <li class="disabled"><a href="#">Prev</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">6</a></li>
            <li><a href="#">7</a></li>
            <li class="disabled"><a href="#">Next</a></li>
        </ul>
    </div>
</div>
