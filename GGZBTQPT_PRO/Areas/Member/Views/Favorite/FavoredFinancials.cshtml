@model Webdiyer.WebControls.Mvc.PagedList<GGZBTQPT_PRO.Models.T_XM_Financing>

<script type="text/javascript">
    function notice(data) {
        $("#favored li.active a").click();
        $.Member.notice(data.message);
    }
</script>
@*收藏的项目信息*@
<div id="recommend">
    <div class="row-fluid">
        @*项目信息*@
        @foreach (var _model in Model)
        {
            <div class="recommend-content ">
                <h4>
                    @Html.ActionLink(_model.ItemName, "Details", "Financial",new {id = _model.ID},null)</h4>
                @*摘要*@
                <p class="summary">
                    @_model.ItemContent
                </p>
                @*附属信息*@
                <div class="recommend-info">
                    <span class="pub-time">@_model.CreateTime</span> <span class="pro-type">总投资：@_model.TotalInvestment</span> 
                    <span class="favorite"><a href="#">【@_model.Favoites.Count() 人收藏】</a></span> 
                    <span><i class="icon-heart"></i> @Ajax.ActionLink("取消收藏", "UnFavored", "Favorite", new { id = _model.ID }, new AjaxOptions { HttpMethod = "post", OnSuccess = "notice" }) </span>
                </div>
            </div>
        }
    </div>
    <div class="pagination pagination-left clear">
        @Html.AjaxPager(Model, new PagerOptions { PageIndexParameterName = "id", ContainerTagName = "ul", CurrentPagerItemWrapperFormatString = "<li class='active'><a href='#'>{0}</a></li>", PagerItemWrapperFormatString = "<li>{0}</li>" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "details" }) 
    </div>
</div>
