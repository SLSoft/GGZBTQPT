@{
    Layout = null;
}

@helper Notice()
    {
        if (ViewData["notice"] != null && ViewData["notice"] != "")
        {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">
                ×</button>
            <strong>@ViewData["notice"].ToString()</strong> 
        </div>
        }
        if (ViewData["error"] != null && ViewData["error"] != "")
        {
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">
                    ×</button>
                <strong>@ViewData["error"].ToString()</strong> 
            </div>
        }
}
